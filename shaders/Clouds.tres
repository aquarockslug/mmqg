code = "shader_type canvas_item;

uniform sampler2D mask_texture;
uniform float cloud_y;
uniform float scroll = 0.0;
uniform vec4 original_0: hint_color;
uniform vec4 original_1: hint_color;
uniform vec4 replace_0: hint_color;
uniform vec4 replace_1: hint_color;

const float precision = 0.1;

vec4 swap_color(vec4 color){
	vec4 original_colors[2];
    original_colors[0] = original_0;
    original_colors[1] = original_1;
    
	vec4 replace_colors[2];
    replace_colors[0] = replace_0;
    replace_colors[1] = replace_1;
    
	for (int i = 0; i < 2; i ++) {
		if (distance(color, original_colors[i]) <= precision){
			return replace_colors[i];
		}
	}
	return color;
}

void fragment() {
	vec2 offset = UV;
	offset.x -= mod(scroll, 1.0);
	offset.y += cloud_y;
	if (offset.x <= 0.0){ offset.x += 1.0; }
	
	float is_cloud = texture(mask_texture, offset).a;

	// draw the unmodified background in places where there isn't a cloud	
	COLOR.r = (1.0 - is_cloud) * texture(TEXTURE, UV).r;
	COLOR.g = (1.0 - is_cloud) * texture(TEXTURE, UV).g;
	COLOR.b = (1.0 - is_cloud) * texture(TEXTURE, UV).b;
	
	// draw the color swapped texture anywhere there is clouds
	COLOR.r += is_cloud * swap_color(texture(TEXTURE, UV)).r;
	COLOR.g += is_cloud * texture(mask_texture, offset).a * swap_color(texture(TEXTURE, UV)).g;
	COLOR.b += is_cloud * texture(mask_texture, offset).a * swap_color(texture(TEXTURE, UV)).b;
}
"

